{
  "expo": {
    "name": "DARAPO",
    "slug": "DARAPO",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.darapo.app",
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take photos for daily missions.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to save and share photos."
      }
    },
    "android": {
      "package": "com.darapo.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera for taking photos."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos for sharing.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos to your gallery."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "manifestPlaceholders": {
              "KAKAO_APP_KEY": "320c4ec9a8df9ec13f1146682d28ce46"
            }
          },
          "ios": {
            "infoPlist": {
              "CFBundleURLTypes": [
                {
                  "CFBundleURLName": "kakao",
                  "CFBundleURLSchemes": ["kakao320c4ec9a8df9ec13f1146682d28ce46"]
                }
              ],
              "LSApplicationQueriesSchemes": [
                "kakaokompassauth",
                "kakaolink",
                "kakao320c4ec9a8df9ec13f1146682d28ce46"
              ]
            }
          }
        }
      ]
    ]
  }
}
